<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('head'); %>
</head>

<body>
  <%- include('navbar'); %>

    <!--Conteudo-->
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
          <form action="/cadastroUsuario" enctype="multipart/form-data" method="POST" class="col-sm-10 col-md-8 col-lg-6 rounded shadow p-5">
            <img src="imagens/logoDobem.png" class="logo my-0 mt-5" />
            <h1 class="mb-5 mt-2 titleLoginU fw-bold">Seu cadastro</h1>
            <% if(mensagem){%>
              <div class="alert alert-warning" role="alert">
                  <%= mensagem %>
              </div>
            <%}%>
            <div class="form-floating mb-3">
                <input
                  type="text"
                  name="nome"
                  id="txtNome"
                  class="form-control rounded-pill"
                  placeholder=" "
                  autofocus
                  required
                />
                <label for="txtNome" class="txtNome">Nome completo</label>
              </div>
  
            <div class="form-floating mb-3">
              <input
                type="email"
                name="email"
                id="txtEmail"
                class="form-control rounded-pill"
                placeholder=" "
                autofocus
                required
              />
              <label for="txtEmail" class="txtEmail">E-mail</label>
            </div>
  
            <div class="form-floating mb-3">
              <input
                type="password"
                name="senha"
                id="txtSenha"
                class="form-control rounded-pill"
                placeholder=" "
                required
              />
              <label for="txtSenha" class="txtSenha">Senha</label>
            </div>

            

            <div class="form-floating mb-3">
                <select 
                class="form-control rounded-pill" 
                id="estado" 
                name="estado">
                </select required>
                <label for="estado" class="txtSenha">Estado</label>
            </div>

            <div class="form-floating mb-3">
                <select 
                class="form-control rounded-pill" 
                id="cidade" 
                name="cidade">
                </select required>
                <label for="cidade" class="txtSenha">Cidade</label>
            </div>
  

            <div class="form-floating mb-3">
              <input
                type="text"
                name="endereco"
                id="txtEndereco"
                class="form-control rounded-pill"
                placeholder=" "
                autofocus
                required
              />
              <label for="txtEndereco" class="txtNome">EndereÃ§o</label>
            </div>

            <div class="form-floating mb-3">
              <input type="file" name="imagem" id="imagem" class="form-control rounded-pill" placeholder="Logo"
                autofocus required />
            </div>

            <button
              type="submit"
              class="btn btn-success px-5 py-3 rounded-pill"
            >
              Cadastrar
            </button>
  
            <p class="mt-3 spanOp">
              Ja possui conta?
              <a href="/loginUsuario">Clique aqui</a> para entrar.
            </p>
            <p class="mt-3 text-success">
              Deseja entrar como fruteira?
              <a href="/loginFruteira">Clique aqui</a> para acessar sua conta.
            </p>
          </form>
        </div>
      </div>
    <!--ConteudoFim-->

    <footer class="shadow">
      <%- include('footer'); %>
    </footer>
    <!--FooterFim-->
    <%- include('script'); %>
</body>

</html>