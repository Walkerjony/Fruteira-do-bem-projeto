<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('head'); %>
</head>

<body>
  <%- include('navbar'); %>

    <!--Conteudo-->
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
        <h1 class="titlePag fw-bold">Minha Conta</h1>
        <div class="row gx-3">
            <div class="col-4">
                <div class="list-group">
                    <a href="/cliente" class="list-group-item list-group-item-action   text-success ">
                        <i class="bi-person fs-6"></i> Dados Pessoais
                    </a>
                    <a href="/clientePedidos" class="list-group-item list-group-item-action bg-success text-light">
                        <i class="bi-truck fs-6"></i> Pedidos Realizados
                    </a>

                </div>
            </div>
            <div class="col-6">
                <div class="accordion" id="divPedidos">
                    <% let contadorPedido = 1; %>
                    <% dadosPedidos.forEach(function(dados) { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#pedido<%= contadorPedido %>">
                                    <b class="text-success">Pedido NÂ° <%= contadorPedido %> </b>
                                </button>
                            </h2>
                            <div id="pedido<%= contadorPedido %>" class="accordion-collapse collapse" data-bs-parent="#divPedidos">
                                <div class="accordion-body">
                                    <table class="table">
                                        <tfoot>
                                            <tr>
                                                <th class="text-success" >Valor Total:</th>
                                                <td class="text-success"><%= dados.valor.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %> </td>
                                            </tr>
                                            <tr>
                                                <th class="text-success" >Forma de Pagamento:</th>
                                                <td class="text-success"><%=dados.pagamento %> </td>
                                            </tr>
                                            <tr>
                                                <th class="text-success" >Forma de Entrega:</th>
                                                <td class="text-success"><%=dados.entrega %> </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>       
                        <% contadorPedido++; %>        
                    <% }); %>
                    

                </div>
            </div>
        </div>
    </div>
            </div>
        </div>
    </div>
    </div>
    <!--ConteudoFim-->

    <!--Footer-->
    <footer class="shadow">
      <%- include('footer'); %>
    </footer>
    <!--FooterFim-->

</body>

</html>